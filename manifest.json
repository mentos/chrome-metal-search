{
  "manifest_version": 2,

  "name": "Metal Search",
  "description": "Look up selected text at popular Metal music related websites",
  "short_name": "Metal Search",
  "version" : "0.1",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions" : [
    "tabs",
    "contextMenus"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": [ "http://*/*" ],

    "js": [
      "contentscript.js"
    ]
  }]
}
